<view class="container flex-direction_column"><block wx:if="{{page_type=='1'}}"><view class="from-view"><view class="leabe-row"><text class="leabe-row_text">标题</text><input class="input" placeholder="请输入标题" data-event-opts="{{[['input',[['__set_model',['','put_title','$event',[]]]]]]}}" value="{{put_title}}" bindinput="__e"/></view></view></block><view class="put-section"><textarea class="textarea" value="{{put_content}}" placeholder="请输入内容" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['','put_content','$event',[]]]]]]}}" bindinput="__e"></textarea><view class="image-view"><block wx:for="{{photo}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="image-item"><image class="add" style="{{(item.style)}}" src="{{item.src}}"></image><view data-event-opts="{{[['tap',[['onRemoveImage',[index]]]]]}}" class="image-item_close" bindtap="__e"></view></view></block><block wx:if="{{photo.length<6}}"><view data-event-opts="{{[['tap',[['chooseImage',['$event']]]]]}}" class="image-item" bindtap="__e"><image class="add" src="/static/site/icon-upimage.png"></image></view></block></view></view><view data-event-opts="{{[['tap',[['chooseLocation',['$event']]]]]}}" class="put-position" bindtap="__e"><image class="icon-site" src="/static/realtime/icon-site.png" mode="widthFix"></image><text class="put-position_text">{{pickerText}}</text></view><view data-event-opts="{{[['tap',[['onPut',['put']]]]]}}" class="put-submit" bindtap="__e">{{page_title}}</view><mpvue-picker class="vue-ref" vue-id="1" themeColor="{{themeColor}}" mode="{{mode}}" deepLength="{{deepLength}}" pickerValueDefault="{{pickerValueDefault}}" pickerValueArray="{{pickerValueArray}}" data-ref="mpvuePicker" data-event-opts="{{[['^onConfirm',[['onConfirm']]],['^onCancel',[['onCancel']]]]}}" bind:onConfirm="__e" bind:onCancel="__e" bind:__l="__l"></mpvue-picker></view>